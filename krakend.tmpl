{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "{{ env "SERVICE_NAME" }}",
  "port": {{ .service.port }},
  "timeout": "{{ .service.timeout }}",
  "cache_ttl":  "{{ .service.cache_ttl }}",
  "output_encoding": "{{ .service.output_encoding }}",
  "plugin": {
    "pattern": ".so",
    "folder": "/usr/lib/krakend/plugins"
  },
  "endpoints": [
    {{ range $idx, $endpoint := .endpoint.loadblancer }}
    {{if $idx}},{{end}}
      {
        "endpoint": "{{ $endpoint.endpoint }}",
        "method": "{{ $endpoint.method }}",
        "backend": [
            {
              "url_pattern": "{{ $endpoint.backend_url_pattern }}",
              "method": "{{ $endpoint.backend_method }}",
              "host": [
                "{{ $endpoint.backend_host }}"
              ],
              "extra_config": {
                {{ include "rate_limit_backend.tmpl" }}
              }
            }
        ]
    }
    {{ end }}
    {{ template "sample_template.tmpl" .}}
  ],
  "extra_config": {{ marshal .service.extra_config }},
}